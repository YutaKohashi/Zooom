<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrap="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    >

    <RelativeLayout
        android:id="@+id/image_view_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/image_view_border"
        android:padding="2dp">

        <ImageView
            android:id="@+id/float_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_view_container">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:id="@+id/container_move">

            <ImageButton
                android:background="@drawable/circle_button_blue"
                android:id="@+id/button_move_view"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_open_with_black_24dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/container_zoom_in"
            android:layout_above="@+id/container_zoom_out"
            android:layout_marginTop="5dp">
            <ImageButton
                android:id="@+id/button_zoom_in"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_zoom_in_black_24dp"
                android:background="@drawable/circle_button_blue"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/container_zoom_out"
            android:layout_above="@+id/container_update"
            android:layout_marginBottom="5dp"
            >
            <ImageButton
                android:id="@+id/button_zoom_out"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_button_blue"
                android:src="@drawable/ic_zoom_out_black_24dp"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/container_update"
            android:layout_alignParentBottom="true"

            >
            <ImageButton
                android:background="@drawable/circle_button_blue"
                android:id="@+id/button_image_update"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_cached_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</RelativeLayout>
