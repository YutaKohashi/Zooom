<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:background="@drawable/image_view_border"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/float_id"
        android:layout_gravity="center_vertical"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:gravity="center_horizontal"/>
        <!--android:padding = "5sp"-->

    <jp.yuta.kohashi.Zooom.object.VerticalSeekBar

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/seekBar"
        android:rotation="180"
        android:layout_above="@+id/button_image_update"
        android:layout_alignEnd="@+id/float_id" />

    <ImageButton
        android:background="@android:color/white"
        android:src="@drawable/ic_cached_black_24dp"
        android:layout_height="50dp"
        android:layout_width="50dp"

        android:id="@+id/button_image_update"
        android:layout_alignEnd="@+id/float_id"
        android:layout_alignBottom="@+id/float_id"/>
    <!--<SurfaceView-->
        <!--android:id="@+id/SurfaceViewMain"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp">-->
    <!--</SurfaceView>-->

</RelativeLayout>
